                <p id="today_date">05/05/2024</p>
              </div>
              <div class="main_layer">
                <p id="city_name">Itahari</p>
                <div class="middle_layer data_hide">
                  <p id="temp"><spna>0</spna> <sup>o</sup>C</p>
                  <p id="weather_status"><i class="fa-solid fa-cloud"></i></p>
                </div>

              </div>
            </div>

        </div>
      </div>
    </div>

    {{>footer}}

