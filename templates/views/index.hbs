<!DOCTYPE html>
<html lang="en">
  <head>
   {{>headerlinks}}
  </head>
  <body>
  
    {{>navbar}}

    <div class="container-fluid main_header">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          <div class="row">
            <!--Left part-->
            <div class="col-md-6 col-12 main_header_left">
              <p>Welcome to the weather app</p>
              <h1>
                Get the latest
                <span class="txt-clr">weather</span>
                Info of your city.
              </h1>
              <a href="/weather"><button class="check-btn">Check Now</button></a>
            </div>

            <!--Right part-->
            <div class="col-md-6 col-12 main_header_right">
              <div id="carouselExample" class="carousel slide">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img src="img/pic3.png" class="w-100" alt="..." />
                  </div>
                  <div class="carousel-item">
                    <img src="img/pic1.jpg" class="w-100" alt="..." />
                  </div>
                  <div class="carousel-item">
                    <img src="img/pic2.jpg" class="w-100" alt="..." />
                  </div>
                </div>
                <button
                  class="carousel-control-prev"
                  type="button"
                  data-bs-target="#carouselExample"
                  data-bs-slide="prev"
                >
                  <span
                    class="carousel-control-prev-icon"
                    aria-hidden="true"
                  ></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button
                  class="carousel-control-next"
                  type="button"
                  data-bs-target="#carouselExample"
                  data-bs-slide="next"
                >
                  <span
                    class="carousel-control-next-icon"
                    aria-hidden="true"
                  ></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    {{>footer}}

   {{>scripts}}
  </body>
</html>
